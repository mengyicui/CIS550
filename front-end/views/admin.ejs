<!DOCTYPE html>
<html>
<title>Admin Page</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/3/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
html,body,h1,h2,h3,h4,h5 {font-family: "Raleway", sans-serif}
</style>
<body class="w3-light-grey">

<!-- Top container -->
<div class="w3-bar w3-top w3-black w3-large" style="z-index:4">
  <button class="w3-bar-item w3-button w3-hide-large w3-hover-none w3-hover-text-light-grey" onclick="w3_open();"><i class="fa fa-bars"></i> Â Menu</button>
  <span class="w3-bar-item w3-right">Car Database Admin Page</span>
</div>

<!-- Sidebar/menu -->
<nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar"><br>
  <div class="w3-container w3-row">
    <div class="w3-col s4">
      <img src="https://cdn2.iconfinder.com/data/icons/danger-problems/512/anonymous-512.png" class="w3-circle w3-margin-right" style="width:46px">
    </div>
    <div class="w3-col s8 w3-bar">
      <span>Welcome, <strong>Admin</strong></span><br>
      <span>Powered By <strong>Group-18</strong></span><br>
    </div>
  </div>
  <hr>
</nav>


<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:300px;margin-top:43px;">

  <!-- Header -->
  <header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-dashboard"></i> My Dashboard</b></h5>
  </header>

  <div class="w3-row-padding w3-margin-bottom">
    <div class="w3-quarter">
      <div class="w3-container w3-red w3-padding-16">
        <div class="w3-left"><i class="fa fa-comment w3-xxxlarge"></i></div>
        <div class="w3-right">
          <h3><%=brand_count%></h3>
        </div>
        <div class="w3-clear"></div>
        <h4>Brands Count</h4>
      </div>
    </div>
    <div class="w3-quarter">
      <div class="w3-container w3-blue w3-padding-16">
        <div class="w3-left"><i class="fa fa-eye w3-xxxlarge"></i></div>
        <div class="w3-right">
          <h3><%=new_car_count%></h3>
        </div>
        <div class="w3-clear"></div>
        <h4>New Cars Count</h4>
      </div>
    </div>
    <div class="w3-quarter">
      <div class="w3-container w3-teal w3-padding-16">
        <div class="w3-left"><i class="fa fa-share-alt w3-xxxlarge"></i></div>
        <div class="w3-right">
          <h3><%=used_car_count%></h3>
        </div>
        <div class="w3-clear"></div>
        <h4>Used Cars Count</h4>
      </div>
    </div>
    <div class="w3-quarter">
      <div class="w3-container w3-orange w3-text-white w3-padding-16">
        <div class="w3-left"><i class="fa fa-users w3-xxxlarge"></i></div>
        <div class="w3-right">
          <h3><%=subscriber_count%></h3>
        </div>
        <div class="w3-clear"></div>
        <h4>Subscribers Count</h4>
      </div>
    </div>
  </div>

  <div class="w3-container">
    <h5><b>Recent Comments</b></h5>
    <div class="w3-row">
      <div class="w3-col m2 text-center">
        <img class="w3-circle" src="http://www.iconsfind.com/wp-content/uploads/2015/08/20150831_55e46ad551392.png" style="width:96px;height:96px">
      </div>
      <div class="w3-col m10 w3-container">
        <h4><%=comments_1.name%><span class="w3-opacity w3-medium"><%=comments_1.curr_time%></span>   <span class="w3-opacity w3-medium"><%=comments_1.email%></span></h4>
        <p><%=comments_1.comments%></p><br>
      </div>
    </div>

    <div class="w3-row">
      <div class="w3-col m2 text-center">
        <img class="w3-circle" src="http://www.iconsfind.com/wp-content/uploads/2015/08/20150831_55e46ad888256.png" style="width:96px;height:96px">
      </div>
      <div class="w3-col m10 w3-container">
        <h4><%=comments_2.name%><span class="w3-opacity w3-medium"><%=comments_2.curr_time%></span>   <span class="w3-opacity w3-medium"><%=comments_2.email%></span></h4>
        <p><%=comments_2.comments%></p><br>
      </div>
    </div>
  </div>

  <div class="w3-container">
    <h5>Create New Car</h5>
      <form class="w3-container" action="/create_car" method="post">

        <label class="w3-text-blue"><b>Make</b></label>
        <input class="w3-input w3-border" type="text" name="Make" required>
         
        <label class="w3-text-blue"><b>Model</b></label>
        <input class="w3-input w3-border" type="text" name="Model" required>

        <label class="w3-text-blue"><b>Year</b></label>
        <input class="w3-input w3-border" type="text" name="Year" required>

        <label class="w3-text-blue"><b>City MPG</b></label>
        <input class="w3-input w3-border" type="text" name="city_mpg" required>

        <label class="w3-text-blue"><b>Highwat MPG</b></label>
        <input class="w3-input w3-border" type="text" name="highway_mpg" required>

        <label class="w3-text-blue"><b>Price</b></label>
        <input class="w3-input w3-border" type="text" name="price">

        <label class="w3-text-blue"><b>Transimission (A or M)</b></label>
        <select class="w3-select" name="transimission" required>
        <option value="" disabled selected>Choose Transimission...</option>
        <option value="A">Automatic</option>
        <option value="M">Manual</option>
        </select>

        <label class="w3-text-blue"><b>Driven Wheels (F or R or A)</b></label>
        <select class="w3-select" name="driven_wheels" required>
        <option value="" disabled selected>Choose Driven Wheels...</option>
        <option value="F">Front</option>
        <option value="R">Rear</option>
        <option value="A">All Wheel</option>
        </select>

        <label class="w3-text-blue"><b>Doors Number</b></label>
        <select class="w3-select" name="doors_number" required>
        <option value="" disabled selected>Choose Doors Number...</option>
        <option value="2">2</option>
        <option value="4">4</option>
        </select>

        <label class="w3-text-blue"><b>Size</b></label>
        <select class="w3-select" name="size" required>
        <option value="" disabled selected>Choose Size...</option>
        <option value="Compact">Compact</option>
        <option value="Midsize">Midsize</option>
        <option value="Large">Large</option>
        </select>

        <label class="w3-text-blue"><b>Style</b></label>
        <select class="w3-select" name="style" required>
        <option value="" disabled selected>Choose Style...</option>
        <option value="Coupe">Coupe</option>
        <option value="Sedan">Sedan</option>
        <option value="SUVs">SUVs</option>
        </select>
        <p>  </p>
        <button class="w3-btn w3-blue">Create</button>
       
      </form>

  </div>

  <div class="w3-container">
    <h5>Unsubscribe User</h5>
    <form class="w3-container" action="/unsubscribe" method="post">
      <select class="w3-select" name="option">
        <option value="" disabled selected>Choose the user email to unsubscribe...</option>
        <% for (i = 0; i < subscriber.length; i++) { %> 
            <option value = <%=subscriber[i].email%>> <%=subscriber[i].email%> </option>
        <%}%>
      </select>
      <p>  </p>
      <button class="w3-btn w3-blue">Unsubscribe</button>
    </form>
  </div>

  <br>

  <!-- End page content -->
</div>

<script>
// Get the Sidebar
var mySidebar = document.getElementById("mySidebar");

// Get the DIV with overlay effect
var overlayBg = document.getElementById("myOverlay");

// Toggle between showing and hiding the sidebar, and add overlay effect
function w3_open() {
    if (mySidebar.style.display === 'block') {
        mySidebar.style.display = 'none';
        overlayBg.style.display = "none";
    } else {
        mySidebar.style.display = 'block';
        overlayBg.style.display = "block";
    }
}

// Close the sidebar with the close button
function w3_close() {
    mySidebar.style.display = "none";
    overlayBg.style.display = "none";
}
</script>

</body>
</html>

